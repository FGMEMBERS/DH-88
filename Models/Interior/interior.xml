<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttourvitre</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Panel -->
  <model>
    <path>Aircraft/DH-88/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.670 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.450 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/DH-88/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.219 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.144 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/DH-88/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m>  0.445 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.093 </z-m>
    </offsets>
  </model>

  <animation>
    <type>rotate</type>
    <object-name>inttourvitre</object-name>
    <object-name>intvitres</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -85 </factor>
    <center>
      <x-m> 0.326 </x-m>
      <y-m> 0.310 </y-m>
      <z-m> 0.440 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

