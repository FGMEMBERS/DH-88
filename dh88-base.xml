<?xml version="1.0"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>BARANGER Emmanuel (3D)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>1.0</fuel-fraction>

    <sound>
      <path>Aircraft/DH-88/Sounds/dh88-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/DH-88/Models/dh88.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <startup>
      <splash-texture>Aircraft/DH-88/dh88-splash.png</splash-texture>
    </startup>

    <help>
      <title>DH 88 Comet</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
    </help>

    <menubar include="Gui/dh88-menu.xml"/>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
      </generic>
    </multiplay>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>3</magnetos>
      </engine>
      <engine n="1">
        <magnetos>3</magnetos>
      </engine>
    </engines>
  </controls>

  <consumables>
    <fuel>
      <tank n="0">
        <level-gal_us archive="y">20</level-gal_us>
      </tank>
      <tank n="1">
        <level-gal_us archive="y">20</level-gal_us>
      </tank>
      <tank n="2">
        <level-gal_us archive="y">15</level-gal_us>
      </tank>
      <tank n="3">
        <level-gal_us archive="y">15</level-gal_us>
      </tank>
    </fuel>
  </consumables>
 
  <engines>
    <engine n="0">
      <rpm>500</rpm>
    </engine>
    <engine n="1">
      <rpm>500</rpm>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/dh88-keyboard.xml"/>
  </input>

  <nasal>
    <dh88>
      <file>Aircraft/DH-88/Nasal/doors.nas</file>
      <file>Aircraft/DH-88/Nasal/light.nas</file>
      <file>Aircraft/DH-88/Nasal/liveries.nas</file>
      <file>Aircraft/DH-88/Nasal/immat.nas</file>
    </dh88>
  </nasal>

</PropertyList>

